FROM debian:latest
LABEL org.opencontainers.image.title = "Hummingfab"
ENV DEBUG=True
  
RUN apt-get update 
RUN apt-get install -y net-tools \
  iputils-ping \
  iproute2 \ 
  strace \
  gnupg \
  wget 


COPY ./docker_tmp /hummingfab/

EXPOSE 5555 

WORKDIR /hummingfab/
# ENTRYPOINT ["/hummingfab/hb_grid", "--config", "./debug.json"]
CMD /hummingfab/hb_grid --config ./debug.json

